:css
  @keyframes roll-up {
    0% {
      transform: translateY(100%);
    }

    100% {
      transform: translateY(0%);
    }
  }

  .animate-roll-up {
    animation: roll-up 0.5s ease-in-out;
  }

#roll-up.fixed.hidden.inset-x-0.bottom-0.bg-white.shadow-lg.z-50.dark:bg-gray-800.animate-roll-up{ class: 'h-1/2', "data-preview-target" => "main", "data-controller" => "preview" }
  %button.absolute.top-4.right-4.text-gray-500.hover:text-gray-700.dark:text-gray-400.dark:hover:text-gray-200{ "data-action" => "click->preview#close", "data-controller" => "preview" }
